<% const ROOT = `${process.cwd()}/src/assets/ejs`; -%>
<%# ページIDを入力する -%>
<% pageId = 'top'; -%>

<!DOCTYPE html>
<html lang="ja">

<head>
  <%# メタデータ等 -%>
  <%- include(`${ROOT}/_common/_head.ejs`) %>

  <%# CSS -%>
  <%- include(`${ROOT}/_common/_link.ejs`) %>

  <%# JavaScripts -%>
  <%- include(`${ROOT}/_common/_script.ejs`) %>
  <script src="/assets/js/page/home.js" defer></script>

</head>

<body>
  <%# ヘッダー -%>
  <%- include(`${ROOT}/_common/_header.ejs`) %>

  <%# main -%>
  <main class="l-main">
    <h2>TOPページです。</h2>
    <p><a href="/about" class="test-link">ABOUTページはこちらをクリック</a></p>
    <p><a href="/button/" class="test-link">BUTTONページはこちらをクリック</a></p>
    <p><a href="/layout/" class="test-link">LAYOUTページはこちらをクリック</a></p>
    <p><a href="/javascript/" class="test-link">JAVASCRIPTページはこちらをクリック</a></p>

    <p>テキスト<b>テキスト</b>テキスト<em>テキスト</em>テキスト</p>


    <p>テキストテキスト<br>テキストテキスト<br /></p>

    <!-- <h3>
      <p>マーックアップエラー用テキスト</p>
    </h3> -->

    <p class="js-test-html">HTMLファイル内に記述したJSで色変更</p>
    <p class="js-test-js-hoge">JSファイル内に記述したコードで色変更：hogeファイル</p>
    <p class="js-test-js-foo">JSファイル内に記述したコードで色変更：fooファイル</p>
    <p class="js-test-js-bar">JSファイル内に記述したコードで色変更：barファイル（homeのみ）</p>


    <%- include(`${ROOT}/_contents/_top/_mv.ejs`) %>

  </main>

  <%# フッター -%>
  <%- include(`${ROOT}/_common/_footer.ejs`) %>

  <!-- defer属性は外部スクリプトファイルにのみ効果があるため、インラインスクリプトタグで記述したscriptはdefer属性使用不可のため注意 -->
  <script>
    const textColorChange = () => {
      const testJsHtml = document.querySelector('.js-test-html');
      testJsHtml.style.color = 'red';
    };
    textColorChange();
  </script>

</body>

</html>
